@import 'Globals.myth';

.u-circle {
  border-radius: 50%;
}
.u-relative {
  position: relative;
}
.u-zBody {
  position: relative;
  z-index: var(--z-index--bodyCopy);
}
.u-translate-down {
  transform: translate3d(0, 100%, 0);
}
.u-translate-up {
  transform: translate3d(0, -100%, 0);
}
.u-translate-left {
  transform: translate3d(-100%, 0, 0);
}
.u-translate-right {
  transform: translate3d(100%, 0, 0);
}
.u-reset-translate {
  transform: translate3d(0, 0, 0);
}
